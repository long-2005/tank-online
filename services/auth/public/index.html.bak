        // G·ª≠i input l√™n Server (V·∫´n gi·ªØ 60 l·∫ßn/gi√¢y ƒë·ªÉ ph·∫£n h·ªìi nhanh)
        setInterval(() => { if(isPlaying && socket) socket.emit('movement', move); }, 1000/60);

        // --- H√ÄM V·∫º (RENDER LOOP) ---
        // T·∫°i sao d√πng requestAnimationFrame?
        // 1. N√≥ ƒë·ªìng b·ªô v·ªõi t·∫ßn s·ªë qu√©t m√†n h√¨nh (th∆∞·ªùng l√† 60Hz), gi√∫p h√¨nh ·∫£nh m∆∞·ª£t nh·∫•t.
        // 2. T·ª± ƒë·ªông d·ª´ng khi ng∆∞·ªùi d√πng chuy·ªÉn tab (ti·∫øt ki·ªám hi·ªáu nƒÉng).
        function gameLoop() {
            if (!isPlaying) return;
            
            updateAndDraw(); // H√†m v·∫Ω ch√≠nh
            
            animationId = requestAnimationFrame(gameLoop); // L·∫∑p l·∫°i li√™n t·ª•c
        }

        // --- C·∫§U TR√öC L∆ØU TR·ªÆ XE TƒÇNG CLIENT ---
        // D√πng ƒë·ªÉ l∆∞u v·ªã tr√≠ hi·ªán t·∫°i ph·ª•c v·ª• cho vi·ªác l√†m m∆∞·ª£t (Interpolation)
        let clientTanks = {}; 

        function updateAndDraw() {
            // --- RESET CONTEXT ---
            ctx.globalAlpha = 1.0; 
            ctx.filter = 'none';
            ctx.clearRect(0, 0, 800, 600);

            // Battle Royale: Update HUD (with safety checks)
            try { updateArmorUI(); } catch(e) { }
            try { updateAmmoUI(); } catch(e) { }
            
            // Camera follow player
            if (latestServerData && socket.id && latestServerData.players[socket.id]) {
                let me = latestServerData.players[socket.id];
                
                // View distance based on skin (balance)
                let viewRadius = 400; // Default
                if (me.skin === 'tank1') viewRadius = 350; // Fast tank, less view
                else if (me.skin === 'tank2') viewRadius = 450; // Heavy tank, more view
                else if (me.skin === 'tank3') viewRadius = 380;
                else if (me.skin === 'tank4') viewRadius = 420;
                else if (me.skin === 'tank5') viewRadius = 400;
                
                // Smooth camera (lerp)
                let targetX = me.x - 400;
                let targetY = me.y - 300;
                camera.x += (targetX - camera.x) * 0.1;
                camera.y += (targetY - camera.y) * 0.1;
                
                // Clamp camera to map bounds
                camera.x = Math.max(0, Math.min(camera.x, COLS * TILE_SIZE - 800));
                camera.y = Math.max(0, Math.min(camera.y, ROWS * TILE_SIZE - 600));
            }

            // 1. V·∫º N·ªÄN (BACKGROUND) v·ªõi camera offset
            ctx.save();
            ctx.translate(-camera.x, -camera.y);
            
            // Draw background pattern
            ctx.fillStyle = '#ebd5b3';
            ctx.fillRect(camera.x, camera.y, 800, 600);
            
            // V·∫Ω l∆∞·ªõi (Grid) ch·ªâ trong viewport
            ctx.strokeStyle = 'rgba(255,255,255,0.2)'; 
            ctx.lineWidth = 1;
            ctx.beginPath();
            let startX = Math.floor(camera.x / TILE_SIZE) * TILE_SIZE;
            let endX = Math.ceil((camera.x + 800) / TILE_SIZE) * TILE_SIZE;
            let startY = Math.floor(camera.y / TILE_SIZE) * TILE_SIZE;
            let endY = Math.ceil((camera.y + 600) / TILE_SIZE) * TILE_SIZE;
            
            for(let x = startX; x <= endX; x += TILE_SIZE) {
                ctx.moveTo(x, camera.y);
                ctx.lineTo(x, camera.y + 600);
            }
            for(let y = startY; y <= endY; y += TILE_SIZE) {
                ctx.moveTo(camera.x, y);
                ctx.lineTo(camera.x + 800, y);
            }
            ctx.stroke();
            
            // 1.5 ZONES (PUBG-style)
            if (latestServerData && latestServerData.zonePhase > 0) {
                ctx.fillStyle = 'rgba(0, 100, 255, 0.15)';
                ctx.beginPath();
                ctx.arc(latestServerData.blueZone.x, latestServerData.blueZone.y, latestServerData.blueZone.radius, 0, Math.PI * 2);
                ctx.fill();
                ctx.strokeStyle = 'rgba(0, 150, 255, 0.6)';
                ctx.lineWidth = 3;
                ctx.stroke();
                
                ctx.strokeStyle = 'rgba(255, 255, 255, 0.9)';
                ctx.lineWidth = 4;
                ctx.beginPath();
                ctx.arc(latestServerData.safeZone.x, latestServerData.safeZone.y, latestServerData.safeZone.radius, 0, Math.PI * 2);
                ctx.stroke();
            }
            
            // 2. V·∫º SUPPLY CRATES (only visible)
            if (latestServerData && latestServerData.supplyCrates) {
                latestServerData.supplyCrates.forEach(crate => {
                    if (!crate.active) return;
                    if (crate.x < camera.x - 50 || crate.x > camera.x + 850) return;
                    if (crate.y < camera.y - 50 || crate.y > camera.y + 650) return;
                    
                    ctx.fillStyle = '#8B4513';
                    ctx.fillRect(crate.x - 15, crate.y - 15, 30, 30);
                    ctx.strokeStyle = '#654321';
                    ctx.lineWidth = 2;
                    ctx.strokeRect(crate.x - 15, crate.y - 15, 30, 30);
                });
            }
            
            // 3. V·∫º AIR DROPS (only visible)
            if (latestServerData && latestServerData.airDrops) {
                latestServerData.airDrops.forEach(drop => {
                    if (!drop.active) return;
                    if (drop.x < camera.x - 50 || drop.x > camera.x + 850) return;
                    if (drop.y < camera.y - 50 || drop.y > camera.y + 650) return;
                    
                    // Crate
                    ctx.fillStyle = '#F39C12';
                    ctx.fillRect(drop.x - 20, drop.y - 20, 40, 40);
                    ctx.strokeStyle = '#D68910';
                    ctx.lineWidth = 3;
                    ctx.strokeRect(drop.x - 20, drop.y - 20, 40, 40);
                    
                    // HP bar
                    let hpPercent = drop.hp / drop.maxHp;
                    ctx.fillStyle = 'red';
                    ctx.fillRect(drop.x - 20, drop.y - 30, 40, 5);
                    ctx.fillStyle = '#2ecc71';
                    ctx.fillRect(drop.x - 20, drop.y - 30, 40 * hpPercent, 5);
                });
            }
            
            // 4. V·∫º T∆Ø·ªúNG (only visible tiles)
            if (mapData && mapData.length > 0) {
                // Only render visible tiles
                let startRow = Math.max(0, Math.floor(camera.y / TILE_SIZE));
                let endRow = Math.min(mapData.length - 1, Math.ceil((camera.y + 600) / TILE_SIZE));
                let startCol = Math.max(0, Math.floor(camera.x / TILE_SIZE));
                let endCol = Math.min(mapData[0].length - 1, Math.ceil((camera.x + 800) / TILE_SIZE));
                
                for (let r = startRow; r <= endRow; r++) {
                    for (let c = startCol; c <= endCol; c++) {
                        if (mapData[r][c] === 1) {
                            if (wallImg.complete && wallImg.naturalWidth !== 0) 
                                ctx.drawImage(wallImg, c*TILE_SIZE, r*TILE_SIZE, TILE_SIZE, TILE_SIZE);
                            else {
                                ctx.fillStyle = '#7f8c8d';
                                ctx.fillRect(c*TILE_SIZE, r*TILE_SIZE, TILE_SIZE, TILE_SIZE);
                            }
                        }
                    }
                }
            }
            
            // N·∫øu ch∆∞a c√≥ d·ªØ li·ªáu t·ª´ server th√¨ kh√¥ng v·∫Ω tank/ƒë·∫°n
            if (!latestServerData) return;

            // DRAW SHIELD ITEM
            if (latestServerData.shield && latestServerData.shield.active) {
                // Draw rotating effect or pulsing? Just simple draw first.
                let sx = latestServerData.shield.x;
                let sy = latestServerData.shield.y;
                let pulsate = 1 + Math.sin(Date.now() / 200) * 0.1;
                let size = 32 * pulsate;
                
                if(shieldIconImg.complete) {
                    ctx.drawImage(shieldIconImg, sx - size/2, sy - size/2, size, size);
                } else {
                    ctx.fillStyle = 'cyan';
                    ctx.beginPath(); ctx.arc(sx, sy, 15, 0, Math.PI*2); ctx.fill();
                }
            }

            // 3. V·∫º & L√ÄM M∆Ø·ª¢T XE TƒÇNG (PLAYERS)
            for(let id in latestServerData.players) {
                let pServer = latestServerData.players[id];
                
                // --- K·ª∏ THU·∫¨T L√ÄM M∆Ø·ª¢T (INTERPOLATION) ---
                // N·∫øu ƒë√¢y l√† l·∫ßn ƒë·∫ßu th·∫•y tank n√†y, kh·ªüi t·∫°o v·ªã tr√≠ ngay l·∫≠p t·ª©c
                if (!clientTanks[id]) {
                    clientTanks[id] = { x: pServer.x, y: pServer.y, angle: pServer.angle };
                }

                let pClient = clientTanks[id];
                
                // Lerp (Linear Interpolation): Di chuy·ªÉn t·ª´ t·ª´ v·ªã tr√≠ hi·ªán t·∫°i v·ªÅ v·ªã tr√≠ Server g·ª≠i
                // C√¥ng th·ª©c: M·ªõi = C≈© + (ƒê√≠ch - C≈©) * H·ªá s·ªë (0.1 -> 0.3)
                // H·ªá s·ªë c√†ng nh·ªè c√†ng m∆∞·ª£t nh∆∞ng tr·ªÖ (lag), c√†ng l·ªõn c√†ng nhanh nh∆∞ng gi·∫≠t. 0.2 l√† c√¢n b·∫±ng.
                let lerpFactor = 0.2; 
                pClient.x += (pServer.x - pClient.x) * lerpFactor;
                pClient.y += (pServer.y - pClient.y) * lerpFactor;
                
                // L√†m m∆∞·ª£t c·∫£ g√≥c quay (Angle)
                // X·ª≠ l√Ω tr∆∞·ªùng h·ª£p quay qua m·ªëc 0-360 ƒë·ªô ƒë·ªÉ kh√¥ng b·ªã xoay v√≤ng
                let diffAngle = pServer.angle - pClient.angle;
                while (diffAngle > Math.PI) diffAngle -= 2 * Math.PI;
                while (diffAngle < -Math.PI) diffAngle += 2 * Math.PI;
                pClient.angle += diffAngle * lerpFactor;

                // --- V·∫º TANK ---
                ctx.save();
                ctx.translate(pClient.x, pClient.y);
                ctx.rotate(pClient.angle);
                
                let img = skinImages[pServer.skin] || skinImages['tank'];
                
                if (img && img.complete && img.naturalWidth !== 0) {
                    let ratio = img.naturalWidth / img.naturalHeight;
                    let drawW = 64; let drawH = 64;
                    if (ratio > 1) drawH = 64 / ratio; else drawW = 64 * ratio;
                    ctx.drawImage(img, -drawW/2, -drawH/2, drawW, drawH);
                } else {
                    ctx.fillStyle = 'blue'; ctx.fillRect(-20, -20, 40, 40);
                    ctx.fillStyle = 'black'; ctx.fillRect(0, -5, 30, 10);
                }

                // DRAW SHIELD EFFECT ON PLAYER
                if (pServer.invincibleUntil && pServer.invincibleUntil > latestServerData.serverTime) {
                     ctx.save();
                     // Hi·ªáu ·ª©ng xoay
                     let angle = (Date.now() / 500) % (Math.PI * 2);
                     ctx.rotate(angle);
                     
                     if (shieldImg.complete && shieldImg.naturalWidth !== 0) {
                        let size = 96; 
                        ctx.drawImage(shieldImg, -size/2, -size/2, size, size);
                     } else {
                        ctx.strokeStyle = '#00ffff'; ctx.lineWidth = 3;
                        ctx.beginPath(); ctx.arc(0, 0, 40, 0, Math.PI*2); ctx.stroke();
                     }
                     ctx.restore();
                }

                ctx.restore();

                // --- V·∫º THANH M√ÅU & T√äN ---
                let drawX = pClient.x;
                let drawY = pClient.y;

                ctx.fillStyle = 'white'; ctx.font='10px Arial'; ctx.fillText(pServer.username, drawX-20, drawY-40);
                let maxHp = pServer.maxHp || 100;
                
                // Khung m√°u ƒë·ªè (m·∫•t m√°u)
                ctx.fillStyle = 'red'; ctx.fillRect(drawX-32, drawY-35, 64, 5);
                // M√°u hi·ªán t·∫°i (xanh l√°)
                ctx.fillStyle = '#0f0'; ctx.fillRect(drawX-32, drawY-35, (pServer.hp/maxHp)*64, 5);

                // Thanh n·∫°p ƒë·∫°n (Ch·ªâ hi·ªán cho b·∫£n th√¢n m√¨nh)
                if (id === socket.id) {
                    let timeSinceShot = latestServerData.serverTime - pServer.lastShotTime;
                    let reloadPercent = timeSinceShot / pServer.reloadTime;
                    if (reloadPercent > 1) reloadPercent = 1;
                    
                    ctx.fillStyle = '#555'; ctx.fillRect(drawX-32, drawY-28, 64, 3);
                    ctx.fillStyle = 'yellow'; ctx.fillRect(drawX-32, drawY-28, reloadPercent*64, 3);
                }
            }

            // X√≥a tank kh√¥ng c√≤n t·ªìn t·∫°i (ng∆∞·ªùi ch∆°i tho√°t)
            for (let id in clientTanks) {
                if (!latestServerData.players[id]) delete clientTanks[id];
            }
            
            // Restore for UI elements
            ctx.restore();
            
            // 4. V·∫ÆN ƒê·∫†N (with camera in world space)
            ctx.save();
            ctx.translate(-camera.x, -camera.y);
            ctx.fillStyle = '#ff0';
            latestServerData.bullets.forEach(b => {
                // Only draw visible bullets
                if (b.x >= camera.x - 10 && b.x <= camera.x + 810 && 
                    b.y >= camera.y - 10 && b.y <= camera.y + 610) {
                    ctx.beginPath();
                    ctx.arc(b.x, b.y, 5, 0, Math.PI*2);
                    ctx.fill();
                }
            });
            ctx.restore();

            // 5. MINIMAP
            if (showMinimap && latestServerData) {
                drawMinimap();
            }

            // 6. REMOVED CANVAS PING DRAWING (Moved to HTML UI)
        }
        
        // Minimap rendering
        function drawMinimap() {
            const scale = 2; // 100x75 map -> 200x150 minimap (2px per tile)
            minimapCtx.clearRect(0, 0, 200, 150);
            
            // Background
            minimapCtx.fillStyle = '#2c3e50';
            minimapCtx.fillRect(0, 0, 200, 150);
            
            // Border walls
            minimapCtx.fillStyle = '#7f8c8d';
            minimapCtx.fillRect(0, 0, 200, 2); // Top
            minimapCtx.fillRect(0, 148, 200, 2); // Bottom
            minimapCtx.fillRect(0, 0, 2, 150); // Left
            minimapCtx.fillRect(198, 0, 2, 150); // Right
            
            // Players
            for (let id in latestServerData.players) {
                let p = latestServerData.players[id];
                if (p.dead) continue;
                
                let mx = (p.x / TILE_SIZE) * scale;
                let my = (p.y / TILE_SIZE) * scale;
                
                // Draw player dot
                minimapCtx.fillStyle = (id === socket.id) ? '#2ecc71' : '#e74c3c';
                minimapCtx.beginPath();
                minimapCtx.arc(mx, my, 3, 0, Math.PI * 2);
                minimapCtx.fill();
            }
            
            // Crates
            if (latestServerData.supplyCrates) {
                minimapCtx.fillStyle = '#8B4513';
                latestServerData.supplyCrates.forEach(c => {
                    if (!c.active) return;
                    let mx = (c.x / TILE_SIZE) * scale;
                    let my = (c.y / TILE_SIZE) * scale;
                    minimapCtx.fillRect(mx - 1, my - 1, 2, 2);
                });
            }
            
            // Air drops
            if (latestServerData.airDrops) {
                minimapCtx.fillStyle = '#F39C12';
                latestServerData.airDrops.forEach(d => {
                    if (!d.active) return;
                    let mx = (d.x / TILE_SIZE) * scale;
                    let my = (d.y / TILE_SIZE) * scale;
                    minimapCtx.fillRect(mx - 2, my - 2, 4, 4);
                });
            }
            
            // Camera viewport indicator
            if (socket.id && latestServerData.players[socket.id]) {
                minimapCtx.strokeStyle = '#3498db';
                minimapCtx.lineWidth = 1;
                minimapCtx.strokeRect(
                    (camera.x / TILE_SIZE) * scale,
                    (camera.y / TILE_SIZE) * scale,
                    (800 / TILE_SIZE) * scale,
                    (600 / TILE_SIZE) * scale
                );
            }
        }

    </script>
</body>
