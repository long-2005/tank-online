        window.onkeydown = (e) => {
            if (!e.key) return; // Safety check
            // Minimap toggle - works even when not playing
            if(e.key.toLowerCase()==='m') { 
                showMinimap = !showMinimap;
                document.getElementById('minimap').style.display = showMinimap ? 'block' : 'none';
                return; // Don't process other keys
            }
            
            if(!isPlaying) return;
            
            if(e.key.toLowerCase()==='w') move.up=1; 
            if(e.key.toLowerCase()==='s') move.down=1;
            if(!isPlaying) return; // Prevent movement/actions if not playing
            
            if(e.key.toLowerCase()==='a') move.left=1; 
            if(e.key.toLowerCase()==='d') move.right=1;
            if(e.code==='Space') socket.emit('shoot');
            
            // Battle Royale: Item usage with 1, 2, 3
            if(isPlaying && socket) {
                if(e.key === '1') { 
                    e.preventDefault();
                    socket.emit('use_item', 'healthKit');
                }
                else if(e.key === '2') { 
                    e.preventDefault();
                    socket.emit('use_item', 'armorKit');
                }
                else if(e.key === '3') { 
                    e.preventDefault();
                    socket.emit('use_item', 'smokeBomb');
                }
            }
            
            // Battle Royale: Q key to cycle through ammo types
            if(e.key.toLowerCase()==='q') { socket.emit('switch_ammo'); }
        };
        window.onkeyup = (e) => {
            if (!e.key) return; // Safety check
            if(e.key.toLowerCase()==='w') move.up=0; 
            if(e.key.toLowerCase()==='s') move.down=0;
            if(e.key.toLowerCase()==='a') move.left=0; 
