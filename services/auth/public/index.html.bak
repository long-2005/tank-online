    <script>
        // === CANVAS INITIALIZATION ===
        // Use existing canvas from HTML instead of creating new one
        const canvas = document.getElementById('canvas');
        canvas.width = 800;
        canvas.height = 600;
        const ctx = canvas.getContext('2d');
        
        // Game constants
        const TILE_SIZE = 20;
        let socket = null;

        // Camera system
        let camera = { x: 0, y: 0 };
        
        // Minimap
        let minimapCanvas = document.getElementById('minimap-canvas');
        let minimapCtx = minimapCanvas.getContext('2d');
        let showMinimap = true;

        const SKIN_LIST = ['tank', 'tank1', 'tank2', 'tank3', 'tank4', 'tank5'];
        const skinImages = {};
        SKIN_LIST.forEach(name => {
            skinImages[name] = new Image();
            skinImages[name].src = `/images/${name}.png`;
        });
        
        const shieldImg = new Image(); 
        shieldImg.src = '/images/shield.png';
        const shieldIconImg = new Image();
        shieldIconImg.src = '/images/shieldicon.png';
        
        const wallImg = new Image(); 
        wallImg.src = '/images/wall.png'; // Updated to .png

        wallImg.onerror = () => console.error("Could not load wall.png");

        const bgImg = new Image(); 
        bgImg.src = '/images/bg.jpg?v=3';
        bgImg.onerror = () => {
            console.error("Could not load bg.jpg");
            // Set a flag or fallback? We handle it in draw loop.
        };

        let myUser = null;
        let tankConfig = {};
        let mapData = []; 
        
        // Init Map Immediately - Battle Royale 100x75 (NO OBSTACLES)
        const ROWS=75; const COLS=100;
        for (let r = 0; r < ROWS; r++) {
            let row = [];
            for (let c = 0; c < COLS; c++) {
                // Only border walls
                if (r === 0 || r === ROWS - 1 || c === 0 || c === COLS - 1) {
                    row.push(1);
                } else {
                    row.push(0); // Open terrain
                }
            }
            mapData.push(row);
        }
        
        async function postAPI(url, data) {
            try {
                const res = await fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const json = await res.json();
                if (!res.ok) throw new Error(json.error || 'L·ªói Server');
                return json;
            } catch (e) {
                alert(e.message);
                return null;
            }
        }

        async function showLeaderboard() {
            document.getElementById('menu-screen').style.display = 'none';
            document.getElementById('leaderboard-screen').style.display = 'block';
            
            const list = document.getElementById('leaderboard-list');
            list.innerHTML = 'Loading...';

            try {
                const res = await fetch('/api/leaderboard');
                const data = await res.json();
                
                if (data && data.length > 0) {
                    let html = '<ol style="padding-left: 20px;">';
                    data.forEach(u => {
                        html += `<li style="margin-bottom:5px; border-bottom:1px solid #555; padding:5px;">
                            <span style="font-weight:bold; color:#f1c40f">${u.username}</span> 
                            - Skin: ${u.skins.length} 
                            - Money: <span style="color:#2ecc71">${u.money}$</span>
                        </li>`;
                    });
                    html += '</ol>';
                    list.innerHTML = html;
                } else {
                    list.innerHTML = 'Ch∆∞a c√≥ d·ªØ li·ªáu';
                }
            } catch(e) {
                list.innerHTML = 'L·ªói t·∫£i BXH';
            }
        }

        async function login() {
            let u = document.getElementById('username').value;
            let p = document.getElementById('password').value;
            if(!u || !p) return alert("Vui l√≤ng nh·∫≠p t√™n v√† m·∫≠t kh·∫©u!");

            const data = await postAPI('/api/login', { username: u, password: p });
            if (data) {
                myUser = data.user;
                tankConfig = data.config;
                const gameUrl = data.gameServerUrl;
                connectGameSocket(gameUrl);
                document.getElementById('login-screen').style.display = 'none';
                document.getElementById('menu-screen').style.display = 'block';
            }
        }

        async function register() {
            let u = document.getElementById('username').value;
            let p = document.getElementById('password').value;
            if(!u || !p) return alert("Vui l√≤ng nh·∫≠p t√™n v√† m·∫≠t kh·∫©u!");
            
            const data = await postAPI('/api/register', { username: u, password: p });
            if (data) alert(data.message);
        }

        function closeLeaderboard() {
            document.getElementById('leaderboard-screen').style.display = 'none';
            document.getElementById('menu-screen').style.display = 'block';
        }

        async function login() {
            let u = document.getElementById('username').value;
            let p = document.getElementById('password').value;
            if(!u || !p) return alert("Vui l√≤ng nh·∫≠p t√™n v√† m·∫≠t kh·∫©u!");

            const data = await postAPI('/api/login', { username: u, password: p });
            if (data) {
                myUser = data.user;
                tankConfig = data.config;
                // Config Game Socket
                const gameUrl = data.gameServerUrl; // e.g. "http://localhost:6000"
                connectGameSocket(gameUrl);
                
                // Switch Screen
                // Wait for Map data? We can render shop without map.
                renderShop();
                document.getElementById('login-screen').style.display = 'none';
                document.getElementById('menu-screen').style.display = 'block';
            }
        }

        async function register() {
            let u = document.getElementById('username').value;
            let p = document.getElementById('password').value;
            if(!u || !p) return alert("Vui l√≤ng nh·∫≠p t√™n v√† m·∫≠t kh·∫©u!");
            
            const data = await postAPI('/api/register', { username: u, password: p });
            if (data) alert(data.message);
        }
        
        // --- BI·∫æN TO√ÄN C·ª§C CHO GAME LOOP ---
        let latestServerData = null; // Ch·ª©a d·ªØ li·ªáu m·ªõi nh·∫•t t·ª´ Server g·ª≠i v·ªÅ (24 l·∫ßn/gi√¢y)
        // --- K·∫æT N·ªêI SOCKET ---
        function connectGameSocket(url) {
            let targetUrl = url || window.location.origin;
            console.log("Connecting to Game Server:", targetUrl);
            socket = io(targetUrl);

            // --- LOGOUT LOGIC ---
            window.logoutToMenu = function() {
                if(socket) socket.disconnect();
                socket = null;
                document.getElementById('lobby-screen').style.display = 'none';
                document.getElementById('menu-screen').style.display = 'block';
            };
            
            socket.on('connect', () => {
                console.log("Connected to Game Socket!");
                // Thay v√¨ join lu√¥n, ta hi·ªán Lobby
                document.getElementById('login-screen').style.display = 'none'; // Hide login screen
                document.getElementById('menu-screen').style.display = 'none'; // Hide menu screen
                document.getElementById('lobby-screen').style.display = 'block'; // Show lobby screen
                fetchRooms();
                
                // Ping Loop
                if (pingInterval) clearInterval(pingInterval);
                pingInterval = setInterval(() => {
                    if (!socket) return;
                    const start = Date.now();
                    socket.emit('ping_check', () => { 
                        const latency = Date.now() - start;
                        currentPing = latency;
                        
                        // Update UI HTML directly
                        const pingEl = document.getElementById('ping-display');
                        if(pingEl) {
                            pingEl.innerText = `Ping: ${currentPing}ms`;
                            pingEl.style.color = currentPing < 100 ? '#2ecc71' : (currentPing < 200 ? '#f1c40f' : '#e74c3c');
                        }
                    });
                }, 1000); 
            });

            socket.on('room_list', (rooms) => {
                let html = '<table style="width:100%; text-align:left;"><tr><th>T√™n ph√≤ng</th><th>S·ªâ s·ªë</th><th></th></tr>';
                rooms.forEach(r => {
                    html += `<tr>
                        <td>${r.name}</td>
                        <td>${r.count}/${r.max}</td>
                        <td><button onclick="joinRoom('${r.id}')" ${r.count>=r.max?'disabled':''}>V√†o</button></td>
                    </tr>`;
                });
                html += '</table>';
                if(rooms.length===0) html = '<p>Ch∆∞a c√≥ ph√≤ng n√†o.</p>';
                if(document.getElementById('room-list-container')) {
                    document.getElementById('room-list-container').innerHTML = html;
                }
            });
            
            // Matchmaking events
            socket.on('matchmaking_status', (data) => {
                if (data.status === 'searching') {
                    // Start hidden, but if searching, ensure queue UI is visible
                    document.getElementById('match-start').style.display = 'none';
                    document.getElementById('match-queue').style.display = 'block';
                    document.getElementById('queue-count').innerText = `Ng∆∞·ªùi ch∆°i trong h√†ng: ${data.queueSize}`;
                    document.getElementById('debug-info').innerText = `ƒêang ch·ªù th√™m ng∆∞·ªùi ch∆°i...`;
                } else if (data.status === 'countdown') {
                    // Countdown started!
                    document.getElementById('match-start').style.display = 'none';
                    document.getElementById('match-queue').style.display = 'block';
                    document.getElementById('queue-count').innerText = `Ng∆∞·ªùi ch∆°i: ${data.queueSize}/20`;
                    document.getElementById('debug-info').innerText = `üéÆ B·∫ÆT ƒê·∫¶U TR·∫¨N ƒê·∫§U SAU: ${data.countdown}s`;
                    document.getElementById('debug-info').style.color = '#f1c40f';
                    document.getElementById('debug-info').style.fontSize = '16px';
                    document.getElementById('debug-info').style.fontWeight = 'bold';
                } else if (data.status === 'cancelled') {
                    document.getElementById('match-queue').style.display = 'none';
                    document.getElementById('match-start').style.display = 'block';
                }
            });
            
            socket.on('match_found', (data) => {
                document.getElementById('match-queue').style.display = 'none'; // Hide queue UI
                // document.getElementById('match-start').style.display = 'block'; // Reset for next time - actually lobby hidden below
                document.getElementById('lobby-screen').style.display = 'none';
                document.getElementById('ui-layer').style.display = 'none';
                document.getElementById('hud').style.display = 'block';
                
                mapData = data.map;
                currentRoomId = data.roomId;
                isPlaying = true;
                gameLoop();
            });

            socket.on('create_room_success', (roomId) => {
