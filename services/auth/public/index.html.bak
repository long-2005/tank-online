  <style>
    body { margin: 0; background: #1a1a1a; color: white; font-family: 'Segoe UI', sans-serif; overflow: hidden; display: flex; justify-content: center; align-items: center; height: 100vh; }
    #ui-layer { position: absolute; width: 100%; height: 100%; background: rgba(0,0,0,0.9); display: flex; justify-content: center; align-items: center; z-index: 10; }
    .panel { background: #2c3e50; padding: 25px; border-radius: 12px; text-align: center; width: 550px; box-shadow: 0 0 30px #000; border: 1px solid #34495e;}
    #shop-container { display: grid; grid-template-columns: 1fr 1fr; gap: 15px; max-height: 400px; overflow-y: auto; margin: 20px 0; padding-right: 5px; }
    .skin-card { border: 2px solid #555; padding: 10px; cursor: pointer; border-radius: 8px; background: #34495e; display: flex; flex-direction: column; align-items: center; }
    .skin-card.selected { border-color: #2ecc71; background: #223a2f; }
    .skin-card img { width: 70px; margin-bottom: 5px; }
    .stats-box { font-size: 0.8em; color: #bdc3c7; width: 100%; background: rgba(0,0,0,0.2); padding: 5px; border-radius: 4px; box-sizing: border-box; margin-top: 5px;}
    .stat-row { display: flex; justify-content: space-between; }
    .val-high { color: #e74c3c; font-weight: bold; } 
    .val-mid { color: #f1c40f; font-weight: bold; } 
    .val-good { color: #2ecc71; font-weight: bold; } 
    input { padding: 12px; width: 80%; margin-bottom: 15px; border-radius: 4px; border: none; }
    button { padding: 12px; width: 100%; background: #e67e22; border: none; color: white; font-weight: bold; cursor: pointer; border-radius: 4px; font-size: 16px;}
    
    #hud { position: absolute; width: 100%; height: 100%; pointer-events: none; display: none;}
    #money-display { position: absolute; top: 15px; left: 15px; font-size: 24px; font-weight: bold; text-shadow: 2px 2px 4px black; color: #f1c40f; pointer-events: auto;}
    
    /* Battle Royale HUD */
    #br-hud { position: absolute; top: 60px; left: 15px; background: rgba(0,0,0,0.7); padding: 15px; border-radius: 8px; color: white; font-size: 14px; }
    .armor-bar { display: flex; gap: 5px; margin: 5px 0; }
    .armor-segment { width: 30px; height: 30px; background: #555; border: 2px solid #888; border-radius: 4px; }
    .armor-segment.active { background: #3498db; border-color: #2980b9; }
    #ammo-display { margin-top: 10px; padding: 10px; background: rgba(255,255,255,0.1); border-radius: 4px; }
    .ammo-type { font-weight: bold; color: #f1c40f; }
    .ammo-type.explosive { color: #e74c3c; }
    .ammo-type.armorPiercing { color: #3498db; }
    
    /* Death Screen */
    #death-screen { position: absolute; width: 100%; height: 100%; background: rgba(0,0,0,0.9); display: none; justify-content: center; align-items: center; z-index: 100; }
    .death-panel { background: #2c3e50; padding: 40px; border-radius: 12px; text-align: center; border: 3px solid #e74c3c; }
    
    /* Air Drop Warning */
    #airdrop-warning { position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); background: rgba(230, 126, 34, 0.95); padding: 30px 50px; border-radius: 15px; border: 3px solid #d35400; display: none; z-index: 50; text-align: center; font-size: 24px; font-weight: bold; color: white; box-shadow: 0 0 30px rgba(230, 126, 34, 0.8); }
    
    /* Loot Notification */
    #loot-notification { position: absolute; top: 100px; right: 20px; background: rgba(46, 204, 113, 0.9); padding: 15px 25px; border-radius: 8px; display: none; color: white; font-weight: bold; z-index: 40; }

    /* Loading Spinner */
    .loader { border: 5px solid #f3f3f3; border-top: 5px solid #f1c40f; border-radius: 50%; width: 30px; height: 30px; animation: spin 1s linear infinite; margin: 10px auto; }
    @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
    
    /* Minimap */
    #minimap { position: absolute; bottom: 20px; right: 20px; width: 200px; height: 150px; background: rgba(0,0,0,0.7); border: 2px solid #34495e; border-radius: 4px; display: block; }
    #minimap canvas { width: 100%; height: 100%; }
    .minimap-info { position: absolute; bottom: 2px; left: 2px; font-size: 10px; color: #ecf0f1; background: rgba(0,0,0,0.5); padding: 2px 5px; border-radius: 2px; }
    
    #btn-quit {
        position: absolute; top: 15px; right: 15px;
        width: 40px; height: 40px;
        background: #e74c3c; color: white; border: none;
        border-radius: 8px; font-size: 20px; font-weight: bold;
        cursor: pointer; pointer-events: auto; padding: 0;
        box-shadow: 0 4px 0 #c0392b;
        transition: all 0.1s;
    }
    #btn-quit:active {
        box-shadow: 0 0 0 #c0392b;
        transform: translateY(4px);
    }

    /* Custom Scrollbar */
    ::-webkit-scrollbar { width: 8px; }
    ::-webkit-scrollbar-track { background: #2c3e50; }
    ::-webkit-scrollbar-thumb { background: #7f8c8d; border-radius: 4px; }
    ::-webkit-scrollbar-thumb:hover { background: #95a5a6; }

    canvas { background: #bdc3c7; border: 3px solid #555; box-shadow: 0 0 50px black; }
  </style>
